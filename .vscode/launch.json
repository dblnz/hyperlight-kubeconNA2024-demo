{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "program",
      "type": "promptString",
      "default": "./demo-main/demo-guest-debug",
      "description": "Path to the program to debug",
    },
    {
      "id": "core_dump",
      "type": "promptString",
      "default": "./demo-main/demo-guest-debug.core",
      "description": "Path to the core dump file",
    }
  ],
  "configurations": [
    {
      "name": "Remote LLDB attach",
      "type": "lldb",
      "request": "launch",
      "targetCreateCommands": [
        "target create ${workspaceFolder}/demo-main/demo-guest-debug"
      ],
      "processCreateCommands": [
        "gdb-remote localhost:8080"
      ],
    },
    {
      "name": "Remote GDB attach",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/demo-main/demo-guest-debug",
      "args": [],
      "stopAtEntry": true,
      "hardwareBreakpoints": {
        "require": false,
        "limit": 4
      },
      "cwd": "${workspaceFolder}",
      "environment": [],
      "logging": {
        "engineLogging": true,
        "trace": true,
        "traceResponse": true,
      },
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:8080",
      "setupCommands": [
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
         "name": "Lldb Core dump",
         "type": "lldb",
         "request": "launch",
         "stopOnEntry": true,
         "processCreateCommands": [],
         "targetCreateCommands": [
           "target create ${input:program} -c ${input:core_dump}",
         ],
       },
       {
         "name": "Gdb Core dump",
         "type": "cppdbg",
         "request": "launch",
         "program": "${input:program}",
         "coreDumpPath": "${input:core_dump}",
         "cwd": "${workspaceFolder}",
         "MIMode": "gdb",
         "externalConsole": false,
         "miDebuggerPath": "/usr/bin/gdb",
         "setupCommands": [
           {
             "description": "Set Disassembly Flavor to Intel",
             "text": "-gdb-set disassembly-flavor intel",
             "ignoreFailures": true
           }
         ]
       },
  ]
}
